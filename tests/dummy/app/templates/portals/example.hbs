<div class="section">
  <span class="template-name">example.hbs</span>

  {{#portal-content for="header"}}
    <div id="examples-header" class="header">
      Examples Header - defined in example.hbs
    </div>
  {{/portal-content}}

  {{#portal-content for="footer"}}
    <div id="examples-footer" class="footer">
      <p>
        Examples Footer - defined in example.hbs
      </p>
      <p>
        <button {{action "clicked"}}>click me</button> - actions work as expected.
      </p>
    </div>
  {{/portal-content}}

  <p>
    This sets an example header and footer. Navigate around to see the portal content contextually change.
  </p>

  <ul class="nav">
    <li>{{link-to "Home" "portals.example"}}
      <ul>
        <li>{{link-to "Foo" "portals.example.foo"}}</li>
        <li>{{link-to "Bar" "portals.example.bar"}}
          <ul>
            <li>{{link-to "Baz" "portals.example.bar.baz"}}</li>
          </ul>
        </li>
      </ul>
    </li>
  </ul>

  {{outlet}}

</div>
